<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EditUser.EditProfilActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:cardBackgroundColor="@color/bg"
        android:layout_marginTop="-20dp"
        app:cardCornerRadius="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profil"
            android:textColor="@android:color/white"
            android:textSize="21dp"
            android:layout_gravity="center">

        </TextView>

    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="-50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="60dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_person_black_24dp"></ImageView>

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/etRegisterNama"
                android:layout_weight="1"
                android:hint="Masukan Nama"
                android:inputType="textPersonName"
                android:textColorHint="#92919c"
                android:backgroundTint="#92919c"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                ></EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_phone_black_24dp"></ImageView>

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/etRegisterNohp"
                android:layout_weight="1"
                android:hint="Masukan No HP"
                android:inputType="phone"
                android:textColorHint="#92919c"
                android:backgroundTint="#92919c"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                ></EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_email_black_24dp"></ImageView>

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/etRegisterEmail"
                android:layout_weight="1"
                android:hint="Masukan Email"
                android:inputType="textEmailAddress"
                android:textColorHint="#92919c"
                android:backgroundTint="#92919c"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                ></EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_map_black_24dp"></ImageView>

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/etRegisterAlamat"
                android:layout_weight="1"
                android:hint="Masukan Alamat"
                android:inputType="text"
                android:textColorHint="#92919c"
                android:backgroundTint="#92919c"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                ></EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_lock_outline_black_24dp"></ImageView>

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/etRegisterPassword"
                android:layout_weight="1"
                android:hint="Masukan Password"
                android:inputType="textPassword"
                android:textColorHint="#92919c"
                android:backgroundTint="#92919c"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                ></EditText>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_gravity="center">
        <Button
            android:id="@+id/btnSimpan"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@android:color/white"
            android:background="@color/orange"
            android:text="Ubah"></Button>
    </LinearLayout>
</LinearLayout>